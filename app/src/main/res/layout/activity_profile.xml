<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.mitchell.mychat.ProfileActivity">
    
    <ImageView
        android:id="@+id/profile_visit_user_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/default_profile"/>

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_visit_user_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Display UserName"
        android:gravity="center"/>

    <TextView
        android:id="@+id/profile_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Display UserStatus"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/send_request_button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/decline_request_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="Send Friend Request"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Button
        android:id="@+id/decline_request_button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="Decline Friend Request"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

</RelativeLayout>
